{% extends 'layout.html.twig' %}

{% block javascripts %}
    <script integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="{{ asset('js/script.js') }}"></script>
    {{ form_javascript(form) }}
{% endblock %}

{% block stylesheets %}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block body %}
        <h2 class="page-header">Add Task</h2>
        <div class="form-group col-xs-4">
          {{ form_start(form) }}
          {{ form_row(form.name, { 'attr': {'class': 'form-control'}}) }}
          {{ form_row(form.deadline, { 'attr': {'class' : 'form-control'}} )}}
          {{ form_row(form.status, { 'attr': {'class': 'form-control', 'style' : 'margin-bottom:15px'}}) }}
          {{ form_row(form.priority, { 'attr': {'class': 'form-control', 'style' : 'margin-bottom:15px'}}) }}
          <button class="btn btn-primary">Save</button>
          {{ form_end(form) }}
        </div>
{% endblock %}
