{% extends 'layout.html.twig' %}

{% block body %}
  <a class="btn btn-default" href="{{ path('todo_index') }}">Back Todo List</a>
  <hr>
  <h2 class="page-header">{{ task.name }}</h2>
  <ul class="list-group">
    <li class="list-group-item">Priority: {{ task.priority }}</li>
    <li class="list-group-item">Deadline: <strong>{{ task.deadline|date('d.m.Y') }}</strong> ({{ message }} )</li>
    <li class="list-group-item">Status: <strong>{{ task.status }}</strong></li>
  </ul>
  <h4><a href="{{ path('task_new', {'todoId':task.todo.id,'todoId': todoId} )}}"
         class="btn btn-info">Add new task</a></h4>
{% endblock %}