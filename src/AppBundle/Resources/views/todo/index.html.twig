{% extends 'layout.html.twig' %}

{% block body %}
    <h2 class="page-header">Todos list</h2>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>ID</th>
        <th>{{ knp_pagination_sortable(pagination, 'Name', 'todo.name') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Date created', 'todo.date') }}</th>
        <th>Due Date</th>
        <th></th>
      </tr>
      </thead>
      <tbody>

      {% for todo in pagination %}
        <tr>
          <th>{{ todo.id }}</th>
          <td>{{ todo.name }}</td>
          <td>{{ todo.date|date('F j, Y, g:i a')}}</td>
          <td>{{ todo.deadline|date('F j, Y, g:i a')}}</td>
          <td><a href="{{ path('todo_show',{'todoId':todo.id} )}}" class="btn btn-success">View</a></td>
          <td><a href="{{ path('todo_edit',{'todoId':todo.id} )}}" class="btn btn-default">Edit</a></td>
          <td><a href="{{ path('todo_delete',{'todoId':todo.id} )}}" class="btn btn-warning">Delete</a></td>
        </tr>
      {% endfor %}
      <h4><a href="{{ path('todo_new') }}" class="btn btn-info">Add new todo</a></h4>
      </tbody>
    </table>
{% endblock %}
